-- ===== SIMPLE CIRCLE / CYLINDER BUILDER (Plastic Blocks) =====

-- SETTINGS
local radius = 5        -- how wide the circle is
local layers = 10       -- how tall the cylinder is
local thickness = 1     -- vertical spacing between layers
local step = 10         -- degrees between each block (smaller = smoother)
local blockSize = Vector3.new(1,1,1)  -- size of each block
local height = 2        -- starting height
local color = Color3.fromRGB(255,255,255)

-- CENTER OF BUILD
local center = Vector3.new(0, height, 0)

-- FUNCTION TO PLACE BLOCK
local function spawnBlock(pos)
    local part = Instance.new("Part")
    part.Size = blockSize
    part.Position = pos
    part.Anchored = true
    part.BrickColor = BrickColor.new(color)
    part.Material = Enum.Material.Plastic  -- make it plastic
    part.Parent = workspace
end

-- LOOP TO CREATE CIRCLE/CYLINDER
for layer = 0, layers-1 do
    local y = layer * thickness
    for angle = 0, 360-step, step do
        local rad = math.rad(angle)
        local x = math.cos(rad) * radius
        local z = math.sin(rad) * radius
        spawnBlock(center + Vector3.new(x, y, z))
    end
end

print("Plastic cylinder built!")
